
function checkSameCChain(instance, vehicleA, vehicleB) {
    if(vehicleA == nullVehicle || vehicleB == nullVehicle) {
        return false
    }
    assert(1 <= vehicleA <= instance.size)
    assert(1 <= vehicleB <= instance.size)
    if (vehicleA == vehicleB) {
        return true
    }
    set sigma = instance.sigma
    if (abs(vehicleA - sigma(vehicleA)) > abs(vehicleB - sigma(vehicleB))) {
        return checkSameCChain(instance, vehicleB, vehicleA)
    } else if (abs(vehicleA - sigma(vehicleA)) == abs(vehicleB - sigma(vehicleB))) {
        return false
    }
    assert(abs(vehicleA - sigma(vehicleA)) < abs(vehicleB - sigma(vehicleB)))

    return (
        checkSameCChain(sigma(vehicleA), vehicleB)
    )
}
